<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.project01.mapper.ProductMapper">
    <select id="selectAllProduct" resultType="prdto">
        SELECT * FROM PRODUCT
    </select>
    <select id="getPriceById" resultType="int" parameterType="int">
        SELECT price FROM PRODUCT WHERE pid = #{pid}
    </select>
    <select id="selectProduct" resultType="prdto" parameterType="java.util.List">
        SELECT * FROM PRODUCT
        WHERE pid IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>
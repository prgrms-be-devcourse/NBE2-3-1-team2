<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.project01.mapper.ProductMapper">

    <select id="lists" resultType="product">
        select pid, img, name, cat, stk, price
        from product;
    </select>

    <select id="cart_lists" parameterType="String" resultType="product">
        select pid, img, name, cat, price
        from product
        where pid=#{pid}
    </select>

    <select id="findImg" parameterType="String" resultType="String">
        select img from product
        where pid=#{pid}
    </select>

</mapper>